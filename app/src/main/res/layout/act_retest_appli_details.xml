<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.rto_driving_test.Authorization.ActShowRoute">

    <include layout="@layout/tool_bar_layout"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar"
            android:background="@color/bg_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_color"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/center_info_left_righ_margin"
                    android:layout_marginRight="@dimen/center_info_left_righ_margin"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl_name"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="4dp"

                        >

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/rl_date"
                            android:gravity="center|left"
                            android:text="Rakesh Verma"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_id"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/rl_date"
                            android:layout_below="@+id/tv_name"
                            android:gravity="center|left"
                            android:text="ID:24020202023"
                            android:paddingLeft="10dp"

                            android:textSize="14dp" />
                        <RelativeLayout
                            android:id="@+id/rl_date"
                            android:layout_width="100dp"
                            android:layout_height="fill_parent">

                            <ImageView
                                android:id="@+id/iv_date"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/pic" />
                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/center_info_left_righ_margin"
                    android:layout_marginRight="@dimen/center_info_left_righ_margin"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        >

                        <TextView
                            android:layout_width="@dimen/text_view_size"
                            android:layout_height="wrap_content"
                            android:text="Application Number"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_ap_no"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="2342422"
                            android:textSize="14dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/center_info_left_righ_margin"
                    android:layout_marginRight="@dimen/center_info_left_righ_margin"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        >
                        <TextView
                            android:layout_width="@dimen/text_view_size"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="14dp"
                            />
                        <TextView
                            android:id="@+id/tv_nm"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Raj Vishvakarma "
                            android:textSize="14dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/center_info_left_righ_margin"
                    android:layout_marginRight="@dimen/center_info_left_righ_margin"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        >

                        <TextView
                            android:layout_width="@dimen/text_view_size"
                            android:layout_height="wrap_content"
                            android:text="Father Name"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_fath_nm"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Raju yadav"
                            android:textSize="14dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/center_info_left_righ_margin"
                    android:layout_marginRight="@dimen/center_info_left_righ_margin"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        >

                        <TextView
                            android:layout_width="@dimen/text_view_size"
                            android:layout_height="wrap_content"
                            android:text="DOB"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_dob"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="03/04/1992"
                            android:textSize="14dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/center_info_left_righ_margin"
                    android:layout_marginRight="@dimen/center_info_left_righ_margin"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        >

                        <TextView
                            android:layout_width="@dimen/text_view_size"
                            android:layout_height="wrap_content"
                            android:text="DL Number"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_dl_no"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="999989958"
                            android:textSize="14dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/center_info_left_righ_margin"
                    android:layout_marginRight="@dimen/center_info_left_righ_margin"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        >

                        <TextView
                            android:layout_width="@dimen/text_view_size"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="22/03/2017"
                            android:textSize="14dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/center_info_left_righ_margin"
                    android:layout_marginRight="@dimen/center_info_left_righ_margin"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        >

                        <TextView
                            android:layout_width="@dimen/text_view_size"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="3.30 PM"
                            android:textSize="14dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

               <!-- <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/center_info_left_righ_margin"
                    android:layout_marginRight="@dimen/center_info_left_righ_margin"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        >

                        <TextView
                            android:layout_width="@dimen/text_view_size"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Class"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_vehicle_class"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Light Rigid(LR class) heavy vehicle"
                            android:textSize="14dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>-->

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginBottom="@dimen/center_info_left_righ_margin"
                    android:layout_marginLeft="@dimen/center_info_left_righ_margin"
                    android:layout_marginRight="@dimen/center_info_left_righ_margin"
                    android:layout_marginTop="30dp"
                    >
                    <Button
                        android:id="@+id/btn_cancel_retest"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/login_rectangle"
                        android:layout_toLeftOf="@+id/view_diff"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_normal" />

                    <View
                        android:id="@+id/view_diff"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true"
                        ></View>
                    <Button
                        android:id="@+id/btn_start_test"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/login_rectangle"
                        android:layout_toRightOf="@+id/view_diff"
                        android:text="@string/start_test"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_normal" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
        <include layout="@layout/error_layout"> </include>
    </RelativeLayout>

</LinearLayout>
