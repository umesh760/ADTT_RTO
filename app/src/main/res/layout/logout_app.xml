<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="fill_parent"   ><!--    xmlns:facebook="http://schemas.android.com/apk/res-auto"-->   <RelativeLayout     android:layout_width="fill_parent"    android:layout_height="160dp"     android:layout_centerVertical="true"       android:layout_margin="10dp"    android:background="@drawable/rounded_corner">       <RelativeLayout           android:layout_width="fill_parent"           android:layout_height="fill_parent"           android:background="@color/black">           <RelativeLayout               android:layout_width="fill_parent"               android:layout_height="fill_parent"               android:layout_margin="1dp"               android:background="@color/white">    <TextView        android:id="@+id/exittext"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:textColor="@color/colorPrimary"        android:gravity="center"        android:layout_marginTop="10dp"        android:text="Are you sure\nwant to\n log out ?"        android:textSize="17dp"     />    <RelativeLayout         android:id="@+id/cost_btnlay"        android:layout_height="50dp"        android:layout_width="fill_parent"              android:layout_alignParentBottom="true"                   >          <View               android:layout_width="fill_parent"              android:layout_height="1dp"              android:background="#4e4e4e"              android:layout_alignParentTop="true"/>           <Button             android:id="@+id/divide_button"            android:layout_height="fill_parent"            android:layout_width="1dp"            android:visibility="visible"            android:layout_centerInParent="true"            android:background="#4e4e4e"                                   />    <Button        android:id="@+id/yes"       android:layout_width="fill_parent"        android:layout_height="50dp"       android:layout_centerVertical="true"             android:layout_toLeftOf="@+id/divide_button"        android:text="Confirm"        android:background="@null"        android:textColor="@color/colorPrimary"        android:textSize="20dp"              />          <Button        android:id="@+id/No"        android:layout_width="fill_parent"        android:layout_height="50dp"       android:text="Cancel"         android:layout_toRightOf="@+id/divide_button"         android:layout_centerVertical="true"         android:background="@null"         android:textColor="@color/colorPrimary"         android:textSize="20dp"        />    </RelativeLayout>       </RelativeLayout>       </RelativeLayout></RelativeLayout></RelativeLayout>